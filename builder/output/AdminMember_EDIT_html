<script>

    /* 填充表单 */
    var fillAdminMember = function (data) {
        $('#AdminMember-edit input[name ="id"]').val(data.id);
        $('#AdminMember-edit input[name ="name"]').val(data.name);
        $('#AdminMember-edit input[name ="real_name"]').val(data.real_name);
        $('#AdminMember-edit input[name ="id_type"]').val(data.id_type);
        $('#AdminMember-edit input[name ="id_no"]').val(data.id_no);
        $('#AdminMember-edit input[name ="checking_status"]').val(data.checking_status);
        $('#AdminMember-edit input[name ="checking_time"]').val(data.checking_time);
        $('#AdminMember-edit input[name ="avatar"]').val(data.avatar);
        $('#AdminMember-edit input[name ="sex"]').val(data.sex);
        $('#AdminMember-edit input[name ="birthday"]').val(data.birthday);
        $('#AdminMember-edit input[name ="passwd"]').val(data.passwd);
        $('#AdminMember-edit input[name ="member_level"]').val(data.member_level);
        $('#AdminMember-edit input[name ="mobile"]').val(data.mobile);
        $('#AdminMember-edit input[name ="email"]').val(data.email);
        $('#AdminMember-edit input[name ="mobile_bind"]').val(data.mobile_bind);
        $('#AdminMember-edit input[name ="email_bind"]').val(data.email_bind);
        $('#AdminMember-edit input[name ="login_times"]').val(data.login_times);
        $('#AdminMember-edit input[name ="reg_time"]').val(data.reg_time);
        $('#AdminMember-edit input[name ="login_time"]').val(data.login_time);
        $('#AdminMember-edit input[name ="login_ip"]').val(data.login_ip);
        $('#AdminMember-edit input[name ="last_login_time"]').val(data.last_login_time);
        $('#AdminMember-edit input[name ="last_login_ip"]').val(data.last_login_ip);
        $('#AdminMember-edit input[name ="score"]').val(data.score);
        $('#AdminMember-edit input[name ="status"]').val(data.status);
    };


    /* 提交表单 */
    var submitAdminMember = function () {
        var request  = {};
        request.id = $('#AdminMember-edit input[name ="id"]').val();
        request.name = $('#AdminMember-edit input[name ="name"]').val();
        request.real_name = $('#AdminMember-edit input[name ="real_name"]').val();
        request.id_type = $('#AdminMember-edit input[name ="id_type"]').val();
        request.id_no = $('#AdminMember-edit input[name ="id_no"]').val();
        request.checking_status = $('#AdminMember-edit input[name ="checking_status"]').val();
        request.checking_time = $('#AdminMember-edit input[name ="checking_time"]').val();
        request.avatar = $('#AdminMember-edit input[name ="avatar"]').val();
        request.sex = $('#AdminMember-edit input[name ="sex"]').val();
        request.birthday = $('#AdminMember-edit input[name ="birthday"]').val();
        request.passwd = $('#AdminMember-edit input[name ="passwd"]').val();
        request.member_level = $('#AdminMember-edit input[name ="member_level"]').val();
        request.mobile = $('#AdminMember-edit input[name ="mobile"]').val();
        request.email = $('#AdminMember-edit input[name ="email"]').val();
        request.mobile_bind = $('#AdminMember-edit input[name ="mobile_bind"]').val();
        request.email_bind = $('#AdminMember-edit input[name ="email_bind"]').val();
        request.login_times = $('#AdminMember-edit input[name ="login_times"]').val();
        request.reg_time = $('#AdminMember-edit input[name ="reg_time"]').val();
        request.login_time = $('#AdminMember-edit input[name ="login_time"]').val();
        request.login_ip = $('#AdminMember-edit input[name ="login_ip"]').val();
        request.last_login_time = $('#AdminMember-edit input[name ="last_login_time"]').val();
        request.last_login_ip = $('#AdminMember-edit input[name ="last_login_ip"]').val();
        request.score = $('#AdminMember-edit input[name ="score"]').val();
        request.status = $('#AdminMember-edit input[name ="status"]').val();

        AlpacaAjax({
            url: g_url + API['XXX_edit'],
            data: request,
            async: false,
            success: function (data) {
                console.log(data);
                Notific(data.msg);
                if(data.code == 9900){
                    Alpaca.to("#/XXX");
                }
            },
        });
    };

    /* 取消 */
    var cancel = function () {
        Alpaca.to("#/XXX");
    }

</script>













