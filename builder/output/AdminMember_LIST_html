<script>
    var enum_id_type = function(value){
        if(value == ' 1'){
            return "身份证";
        }
    };
    var enum_checking_status = function(value){
        if(value == '0'){
            return "未认证";
        }
        if(value == '1'){
            return "认证";
        }
    };
</script>


